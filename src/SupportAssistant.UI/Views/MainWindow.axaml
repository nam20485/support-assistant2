<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SupportAssistant.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SupportAssistant.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding Title}"
        Width="1000" Height="700"
        MinWidth="600" MinHeight="400">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Main Content Area -->
        <Border Grid.Column="0" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="{DynamicResource SystemAccentColor}" 
                        CornerRadius="5" Padding="15" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="ðŸ¤–" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0" />
                            <StackPanel>
                                <TextBlock Text="Support Assistant" FontSize="18" FontWeight="Bold" Foreground="White" />
                                <TextBlock Text="AI-Powered Technical Support" FontSize="12" Foreground="LightGray" />
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Column="1" Content="âš™ï¸ Settings" 
                                Command="{Binding ToggleSettingsCommand}"
                                Classes="accent" />
                    </Grid>
                </Border>

                <!-- Simple Chat Area Placeholder -->
                <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Welcome to Support Assistant!" FontSize="16" FontWeight="Bold" />
                        <TextBlock Text="This is the main chat interface where you'll interact with the AI assistant." 
                                   TextWrapping="Wrap" Margin="0,10,0,0" />
                        <TextBlock Text="The full chat functionality will be implemented in the next phase." 
                                   FontStyle="Italic" Opacity="0.7" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Settings Panel -->
        <Border Grid.Column="1" Width="350" Background="LightGray" 
                IsVisible="{Binding IsSettingsVisible}" Margin="0,10,10,10">
            <ScrollViewer Padding="15">
                <StackPanel Spacing="10">
                    <TextBlock Text="Settings" FontSize="16" FontWeight="Bold" />

                    <!-- Simple Settings Placeholder -->
                    <TextBlock Text="Model Configuration:" FontWeight="SemiBold" />
                    <TextBox Watermark="Language Model Path..." />
                    <TextBox Watermark="Embedding Model Path..." />
                    <TextBox Watermark="Knowledge Base Path..." />
                    
                    <CheckBox Content="Use DirectML (GPU Acceleration)" IsChecked="True" />
                    
                    <ComboBox>
                        <ComboBoxItem Content="GPU" IsSelected="True" />
                        <ComboBoxItem Content="CPU" />
                    </ComboBox>
                    
                    <Button Content="Save Settings" />
                    <Button Content="Initialize AI" Command="{Binding InitializeAICommand}" />
                    
                    <TextBlock Text="Settings functionality will be fully implemented in the next phase." 
                              FontStyle="Italic" Opacity="0.7" TextWrapping="Wrap" />
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>